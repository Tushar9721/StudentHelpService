<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_bubble_self2">


    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STUDENT HELP SERVICE"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/semibold"
        android:padding="20dp"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnWalkSafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Walk Safe"

                android:textSize="25sp" />

            <Button
                android:id="@+id/btnMentalHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Mental Health Strategy"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnCareerAdvisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Career Advisor"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnFitnessAdvisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Fitness/personal Training"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnCampusHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Campus Help"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnSexualAssault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/jbold"
                android:padding="60dp"
                android:text="Sexual Assault"
                android:textSize="25sp" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


    <ImageView
        android:id="@+id/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/chatbot" />


</RelativeLayout>