<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/tvTextService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/jbold"
        android:gravity="center"
        android:padding="10dp"
        android:textAllCaps="true"
        android:text="Fitness/personal training"
        android:textColor="@color/bg_bubble_self2"
        android:textSize="24sp" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTextService"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/viewFitnessCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dropdown"
                android:drawableEnd="@drawable/ic_menu"
                android:fontFamily="@font/jbold"
                android:padding="20dp"
                android:gravity="left"
                android:text="Forge Fitness Centre Orientations"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/fitnessLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="@string/forge_text"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text=" How to book a Consultation"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="call the Forge Fitness Centre at ext 4067"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />



            </LinearLayout>

            <Button
                android:id="@+id/newForgefit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dropdown"
                android:drawableEnd="@drawable/ic_menu"
                android:fontFamily="@font/jbold"
                android:padding="20dp"
                android:gravity="left"
                android:text="NEW! ForgeFit Transformation Program"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/forgeFitLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="@string/forge_fit_text"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text="  Contact information "
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="knightsc@uwindsor.ca"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text=" Registration"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="online or at the St Denis Centre"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />


            </LinearLayout>

            <Button
                android:id="@+id/personalTrainingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dropdown"
                android:drawableEnd="@drawable/ic_menu"
                android:fontFamily="@font/jbold"
                android:padding="20dp"
                android:gravity="left"
                android:text="Personal training"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/personalTrainingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="@string/persnoal_text_training"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text=" Options for Personal Training"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="@string/session_text"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />



            </LinearLayout>


            <Button
                android:id="@+id/employeeWellness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dropdown"
                android:drawableEnd="@drawable/ic_menu"
                android:fontFamily="@font/jbold"
                android:padding="20dp"
                android:gravity="left"
                android:text="Employee Wellness - Faculty Education Gym at Noon"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/employeeWellnessLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text="Price"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="Prices change per semester as well as weeks provided"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text=" Registration can be"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="Single Class or purchase an All-Access pass"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/jbold"
                    android:padding="10dp"
                    android:text="Timings and Each Day Class Includes:"
                    android:textColor="@color/bg_bubble_self2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/regular"
                    android:padding="10dp"
                    android:text="@string/timing_text"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />


            </LinearLayout>



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>